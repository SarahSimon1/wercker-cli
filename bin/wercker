#!/usr/bin/env python
"""wercker-cli

Usage:
    wercker status
    wercker create
    wercker login           - implemented
    wercker logout
    wercker deploy list
    wercker deploy <name>
    wercker (-h | --help)
    wercker --version
    """

import docopt

from werckercli.cli import (
    # get_parser,
    handle_commands,
    get_intro
)

from clint.textui import puts

puts(get_intro())
args = docopt.docopt(__doc__)
handle_commands(args)
